<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="16dp"
    android:id="@+id/crud_museo_fragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:text="@string/crud_manage_museo"
        android:textSize="34dp"
        android:textAlignment="center"/>



    <Button
        android:id="@+id/btnCreaMuseo"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:text="@string/crud_create_museo"/>
    <Button
        android:id="@+id/btnVisualizzaMuseo"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:text="@string/crud_show_museo"/>


</LinearLayout>