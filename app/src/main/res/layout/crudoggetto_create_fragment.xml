<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/titolo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/crud_create_oggetto"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/codice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crud_txt_nome"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/nomeOggetto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crud_txt_anno"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/annoOggetto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crud_txt_descrizione"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/descOggetto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:lines="10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crud_txt_autore"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/autoreValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seleziona_autore"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/autoreCodice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crud_txt_citta"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/cittaValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/cittaCodice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/lblError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/red"/>

        <Button
            android:id="@+id/btn_salva_oggetto"
            android:layout_width="206dp"
            android:layout_height="46dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/crud_txt_salva" />

    </LinearLayout>
</ScrollView>