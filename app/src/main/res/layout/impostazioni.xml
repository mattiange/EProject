<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Versione applicazione 1.0">

    </TextView>

    <Button
        android:id="@+id/btnImpostazioni"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickCarica"
        android:text="Esempio Impostazione 1" />

    <Button
        android:id="@+id/btnEsempio2"
        android:text="Esempio Impostazione 2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickVisualizza"/>


    <Button
        android:id="@+id/btnEsempio3"
        android:text="Esempio Impostazione 3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickModifica"/>


</LinearLayout>