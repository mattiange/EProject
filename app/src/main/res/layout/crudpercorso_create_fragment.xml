<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crud_create_percorsodivisita"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:textSize="30sp" />

    <TextView
        android:labelFor="@+id/etNomePercorso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crud_txt_percorso"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etNomePercorsoDiVIsita"
        android:autofillHints="name"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:labelFor="@+id/etNomeDataVisita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crud_txt_data_visita"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etNomeDataDiVisita"
        android:autofillHints="name"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:labelFor="@+id/etDurata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crud_txt_durata"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etDurataVisita"
        android:autofillHints="name"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnCreaPercorso"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:text="@string/crud_create_percorsodivisita" />

</LinearLayout>