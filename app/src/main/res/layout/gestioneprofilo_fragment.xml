<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/labelMuseum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gestioneprofilo"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:visibility="visible"
        android:layout_marginTop="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:horizontalSpacing="5sp"
        android:numColumns="1"
        android:verticalSpacing="5sp"
        app:layout_constraintBottom_toTopOf="@+id/btnModifica"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/btnModifica"
        android:layout_width="226dp"
        android:layout_height="64dp"
        android:layout_marginBottom="176dp"
        android:text="@string/Modificaprofilo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>