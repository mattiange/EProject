<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crud_create_event"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textSize="30sp" />

        <TextView
            android:labelFor="@+id/tvNomeLuogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp" />

        <TextView
            android:labelFor="@+id/etNomeMuseo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crud_txt_nome"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etNomeAttivita"
            android:autofillHints="name"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:labelFor="@+id/tvDescrizioneAttivita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crud_txt_descrizione"
            android:textSize="24sp" />


        <EditText
            android:id="@+id/etDescrizioneAttivita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:lines="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <!-- Usato per passare l'ID della città
        (è un campo nascosto) -->
        <EditText
            android:id="@+id/etIdCitta"
            android:visibility="invisible"
            android:inputType="none"
            android:autofillHints="name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- ///////////////////////////////////// -->

        <Button
            android:id="@+id/btn_salva_museo"
            android:layout_width="206dp"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/crud_txt_salva"/>
    </LinearLayout>
</ScrollView>