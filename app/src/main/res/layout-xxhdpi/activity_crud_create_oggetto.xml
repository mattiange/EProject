<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout">

    <include
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/menulaterale"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        app:itemTextColor="@color/black"/>

    <ScrollView
        android:id="@+id/listScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            app:layout_constraintTop_toBottomOf="@+id/appbar">

            <TextView
                android:id="@+id/txtProvinciaZona"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:text="@string/crud_provincia"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/crea_oggetto_title"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/crea_oggetto_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/crud_create_oggetto"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/txt_nome_oggetto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="112dp"
                android:layout_weight="1"
                android:text="@string/crud_txt_nome"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_nome_oggetto"
                android:layout_width="206dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="52dp"
                android:inputType="text"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintLeft_toRightOf="@+id/txt_nome_oggetto"
                app:layout_constraintStart_toEndOf="@+id/txt_nome_oggetto"
                app:layout_constraintTop_toBottomOf="@+id/txtProvinciaZona" />

            <TextView
                android:id="@+id/txt_autore_oggetto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="36dp"
                android:layout_weight="1"
                android:text="@string/crud_txt_autore"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_anno_oggetto" />

            <EditText
                android:id="@+id/et_autore_oggetto"
                android:layout_width="206dp"
                android:layout_height="46dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="72dp"
                android:inputType="text"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.863"
                app:layout_constraintLeft_toRightOf="@+id/txt_nome_oggetto"
                app:layout_constraintStart_toEndOf="@+id/txt_autore_oggetto"
                app:layout_constraintTop_toBottomOf="@+id/et_anno_oggetto" />

            <TextView
                android:id="@+id/txt_anno_oggetto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:text="@string/crud_txt_anno"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_nome_oggetto" />

            <EditText
                android:id="@+id/et_anno_oggetto"
                android:layout_width="206dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="52dp"
                android:inputType="text"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/txt_nome_oggetto"
                app:layout_constraintStart_toEndOf="@+id/txt_anno_oggetto"
                app:layout_constraintTop_toBottomOf="@+id/et_nome_oggetto" />

            <TextView
                android:id="@+id/txt_descrizione_oggetto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="76dp"
                android:layout_weight="1"
                android:text="@string/crud_txt_descrizione"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_autore_oggetto" />

            <EditText
                android:id="@+id/et_descrizione_oggetto"
                android:layout_width="206dp"
                android:layout_height="120dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="72dp"
                android:inputType="text"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/txt_descrizione_oggetto"
                app:layout_constraintTop_toBottomOf="@+id/et_autore_oggetto" />


            <TextView
                android:id="@+id/txt_zona_oggetto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="76dp"
                android:layout_weight="1"
                android:text="@string/crud_zona_id"
                android:alpha="0"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_descrizione_oggetto" />

            <EditText
                android:id="@+id/et_zona_oggetto"
                android:layout_width="206dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="72dp"
                android:inputType="text"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/txt_nome_oggetto"
                app:layout_constraintStart_toEndOf="@+id/txt_autore_oggetto"
                app:layout_constraintTop_toBottomOf="@+id/et_descrizione_oggetto" />

            <Button
                android:id="@+id/salva_oggetto"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:layout_marginTop="36dp"
                android:onClick="salvaOggetto"
                android:text="@string/crud_txt_salva"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_zona_oggetto" />

            <!-- Usato per evitare che il pulsante non venga
            visualizzato per intero -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                app:layout_constraintTop_toBottomOf="@+id/salva_oggetto"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>