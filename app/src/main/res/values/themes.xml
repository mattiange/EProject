<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EProject" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/red_500</item>
        <item name="backgroundTint">@color/blue_500</item>
        <item name="android:textColorPrimary">@color/black</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:titleTextColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CheckRadioStyle">

        <item name="colorAccent">@color/blue_500</item>
        <item name="android:textColorLink">@color/blue_500</item>
        <item name="buttonTint">@color/blue_500</item>

    </style>

    <style name="TextBoxStyle">

        <item name="colorAccent">@color/blue_500</item>
        <item name="android:textColorPrimary">@color/black</item>

    </style>

    <style name="Theme.EProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>